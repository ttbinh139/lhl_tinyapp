<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header>

  <main>
    <div class="jumbotron">
      <% if (longURL !==undefined) { %>
        <div class="card text-center">
          <div class="card-header"></div>
          <div class="card-body">
            <h5 class="card-title">TinyURL for: <%= longURL["longURL"] %>
            </h5>
            <p class="card-text">Short URL: <a href="/u/<%= shortURL %>">
                <%= shortURL %>
              </a></p>
          </div>
        </div>
        <% if (templateVars.username) { %>
          <div class="card text-center">
            <div class="card-header"></div>
            <div class="card-body">
              <h5 class="card-title">Edit URL</h5>
              <form class="form-inline" action="/update/<%= shortURL %>" method="POST">
                <div class="form-group mb-2">
                  <label for="longURL">Enter a URL:</label>
                  <input class="form-control" type="text" name="longURL" placeholder="http://" value="<%= longURL['longURL'] %>"
                    style="width: 300px; margin: 1em">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
        <% } %>
        
          <div class="card-footer text-muted"></div>
          <% } else { %>
            <div class="card text-center">
              <div class="card-header"></div>
              <div class="card-body">
                <h5 class="card-text">URL doesn't exist!</h5>
              </div>
            </div>
            <% } %>

        </div>
    </div>
  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>

</html>