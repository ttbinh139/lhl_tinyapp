<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <% if (templateVars.username) { %>
      <h2>My Urls</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit URL</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url in urls) { %>
          <tr>
            <td><%= url %></td>
            <td><%= urls[url]['longURL'] %></td>
            <td><a href="/urls/<%= url %>">Edit</a></td>
            <td>
              <form method="POST" action="/delete/<%= url %>">
                <input type="submit" value="Delete">
              </form>
            </td>
            
          </tr>
        <% } %>
      </tbody>
    </table>
    <% } else { %>
      <div class="card text-center">
        <div class="card-header"></div>
        <div class="card-body">
          <h5 class="card-text">You need login to see your urls</h5>
        </div>
      </div>
    <% } %>
    
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
